{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["es-419", "fr-fr"],
  "tsConfig": "./tsconfig.json",
  "output": {
    "mode": "runtime",
    "outputDir": "./locales",
    "language": "js"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "./xliff/"
  }
}
